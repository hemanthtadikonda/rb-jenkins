pipeline {
    agent any

    stages {
        stage('code compile') {
            steps {
                echo 'code compile'
            }
        }
        stage('code test') {
           steps {
               echo 'code test'
           }
        }
        stage('code quality') {
            steps {
                echo 'code quality'
            }
        }
        stage('code security') {
           steps {
               echo 'code security'
           }
        }
    }
    post {
        always {
              echo 'post'
        }
    }
}


---


pipeline {
   agent any
   environment {
      TEST_URL = 'https://google.com'
      SSH = credentials('centos-ssh')
   }
   stages {
      stage('compile') {
         steps {
            echo 'code compile'
         }
      }
      stage('test') {
         steps {
            echo TEST_URL
            echo SSH
            sh 'env'
         }
      }
   }
}

---